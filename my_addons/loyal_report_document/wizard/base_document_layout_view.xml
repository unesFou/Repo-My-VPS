<odoo>
<data>
<record id="base_document_layout_inherit_form" model="ir.ui.view">
	<field name="name">base.document.layout.inherit.form</field>
	<field name="model">base.document.layout</field>
	<field name="inherit_id" ref="web.view_base_document_layout" />
	<field name="arch" type="xml">
		<xpath expr="//field[@name='logo']" position="after">
			<field name="header_image" widget="image" force_save="1"></field>
			<field name="footer_image" widget="image" force_save="1"></field>
			<field name="water_mark" widget="image" force_save="1"></field>
			<field name="company_watermark" widget="image" force_save="1"></field>
			<field name="image_type" widget="radio" force_save="1" options="{'horizontal': true}"></field>
		</xpath>
	</field>
</record>
</data>
</odoo>
